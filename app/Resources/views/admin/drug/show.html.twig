{% extends 'admin/adminBase.html.twig' %}

{% block body %}
	<div class="container">
		<h1>Lék</h1>

		<table class="grid grid--show">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ drug.id }}</td>
				</tr>
				<tr>
					<th>Název</th>
					<td>{{ drug.name }}</td>
				</tr>
				<tr>
					<th>Hlavní látka</th>
					<td>{{ drug.mainSubstance }}</td>
				</tr>
				<tr>
					<th>Kontraindikace</th>
					<td>{{ drug.contraindication }}</td>
				</tr>
				<tr>
					<th>Množství</th>
					<td>{{ drug.substanceAmount }}</td>
				</tr>
				<tr>
					<th>Doporučená dávka</th>
					<td>{{ drug.recommendedDosage }}</td>
				</tr>
			</tbody>
		</table>

		<ul>
			<li>
				<a href="{{ path('admin_drug_index') }}" class="btn btn--back">Zpět na výpis</a>
				<a href="{{ path('admin_drug_edit', { 'id': drug.id }) }}" class="btn">Upravit</a>
			</li>
		</ul>
	</div>
{% endblock %}
