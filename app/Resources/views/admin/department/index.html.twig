{% extends 'admin/adminBase.html.twig' %}
{% block title %}Oddělení{% endblock %}

{% block body %}
	<div class="container">
		<h1>Seznam oddělení</h1>

		{% if departments|length == 0 %}
			<p class="grid--empty">Žádná oddělení</p>
		{% else %}
			<table class="grid">
				<thead>
				<tr>
					<th>Id</th>
					<th>Zkratka</th>
					<th>Název</th>
					<th>Telefon</th>
					<th>&nbsp;</th>
				</tr>
				</thead>
				<tbody>
				{% for department in departments %}
					<tr>
						<td>{{ department.id }}</td>
						<td>{{ department.shortcut }}</td>
						<td>{{ department.name }}</td>
						<td>{{ department.telephone }}</td>
						<td>
							<a href="{{ path('admin_department_show', { 'id': department.id }) }}" class="btn--show" title="Detail"></a>
							<a href="{{ path('admin_department_edit', { 'id': department.id }) }}" class="btn--edit" title="Upravit"></a>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
            {% include 'include/pagination.html.twig' with {'pathName': 'admin_department_index'}%}
		{% endif %}
		<a href="{{ path('admin_department_new') }}" class="btn">Vytvořit nové oddělení</a>
	</div>
{% endblock %}
