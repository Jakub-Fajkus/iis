{% block body %}
    <h1>Admin</h1>

    <table>
        <tbody>
        <tr>
            <th>Username</th>
            <td>{{ admin.username }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ admin.name }}</td>
        </tr>
        <tr>
            <th>Surname</th>
