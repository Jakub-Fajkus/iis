{% extends 'admin/adminBase.html.twig' %}

{% block body %}
    <h1>Nurse</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nurse.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ nurse.username }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ nurse.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ nurse.surname }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ nurse.telephone }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ nurse.department.name}}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_nurse_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_nurse_edit', { 'id': nurse.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
