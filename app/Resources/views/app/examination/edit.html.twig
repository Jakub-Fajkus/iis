{% extends 'app/appBase.html.twig' %}

{% block body %}

	<div class="container">
		<h1>Examination edit</h1>

		{{ form_start(edit_form, {'attr' : {'class': 'fm'}}) }}

			<div class="fm__wrapper">
				{{ form_row(edit_form.drug, { 'label': 'Název léku' }) }}
				{{ form_row(edit_form.amount, { 'label': 'Množství' }) }}
				{{ form_row(edit_form.delivery, { 'label': 'Zůsob podávání' }) }}
				{{ form_row(edit_form.periodOfApplication, { 'label': 'Doba podávání' }) }}

				<div class="fm__btn">
					<input type="submit" value="Upravit" class="btn" />
				</div>
			</div>

		{{ form_end(edit_form) }}

		<a href="{{ path('app_examination_index') }}"class="btn btn--back">Zpět na výpis</a>
	</div>
{% endblock %}
