{% extends 'app/appBase.html.twig' %}

{% block body %}
	<div class="container">

		<h1>Zaznamenání podání léku</h1>

		{{ form_start(form, {'attr' : {'class': 'fm'}}) }}

			<div class="fm__wrapper">
				{{ form_row(form.time, { 'label': 'Datum od', 'attr' : {'class': 'fm__item--date'}}) }}

				<div class="fm__item--select">
					{{ form_row(form.appliedBy, { 'label': 'Aplikoval' }) }}
				</div>

				<div class="fm__btn">
					<input type="submit" value="Zaznamenat" class="btn" />
				</div>

				<div class="fm__btn">
					<button type="button" id="generator" data-js="drugApp" class="btn" >Generovat pro testy</button>
				</div>
			</div>

		{{ form_end(form) }}


		<ul>
			<li>
				<a href="{{ path('app_drug_application_index') }}" class="btn btn--back">Zpět na všechna podání léků</a>
				<a href="{{ path('app_patient_show', {'id': patientId}) }}" class="btn btn--back">Zpět na pacienta</a>
			</li>
		</ul>
	</div>
{% endblock %}
