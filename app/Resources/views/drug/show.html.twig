{% extends 'base.html.twig' %}

{% block body %}
    <h1>Drug</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ drug.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ drug.name }}</td>
            </tr>
            <tr>
                <th>Mainsubstance</th>
                <td>{{ drug.mainSubstance }}</td>
            </tr>
            <tr>
                <th>Contraindication</th>
                <td>{{ drug.contraindication }}</td>
            </tr>
            <tr>
                <th>Substanceamount</th>
                <td>{{ drug.substanceAmount }}</td>
            </tr>
            <tr>
                <th>Recommendeddosage</th>
                <td>{{ drug.recommendedDosage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_drug_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_drug_edit', { 'id': drug.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
